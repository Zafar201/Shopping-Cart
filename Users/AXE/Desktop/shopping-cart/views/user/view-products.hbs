
    <section>
        <div class="mt-2 ml-5">
            <div>
                <div class="row">
                    {{#each products}}
                    <div class="col-md-3 col-6 col-lg-2" style="margin-top: 15px;align-items:center;" >
                        <div class="card" style="width: 12rem;height:440px;border: 17px solid rgba(0,0,0,.125);">
                            <img class="card-img-top"
                                src="/product-images/{{this._id}}.jpg"
                                 style="height: 185px;">
                            <div class="card-body">
                                <h5 class="card-title">{{this.Name}}</h5>
                                <p class="card-text">{{this.Category}}</p>
                                <p class="card-text">{{this.Description}}</p>
                                <p class="card-text">Rs.{{this.Price}}</p>
                                <button  onclick="addToCart('{{this._id}}')" class="btn btn-primary">Add to Cart</button>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </section>
    
    
