
<section>
    <div class="row" style="background-color: #111;">
        <div class="col-lg-12 col-12 col-md-12">
        <img class="ad-image"  src="https://images-eu.ssl-images-amazon.com/images/G/31/img20/Wireless/WLA/Jupiter/Phase4/GWHeroes/Cases/DesktopHero_1500x600._CB416346009_.jpg" alt="">
        </div>
    </div>
</section>
    
    
    <section>
        <div class="mt-2 ml-5">
            <div>
                <div class="row">
                    {{#each products}}
                    <div class="col-md-4 col-6 col-lg-2" style="margin-top: 20px;align-items:center;" >
                        <div class="card" style="width: 12rem;height:391px;border: 17px solid rgba(0,0,0,.125);">
                            <img class="card-img-top"
                                src="/product-images/{{this._id}}.jpg">
                                
                            <div class="card-body">
                                <h5 class="card-title">{{this.Name}}</h5>
                                <p class="card-text">{{this.Category}}  {{this.Description}}</p>
                                <p class="card-text"></p>
                                <p class="card-text">Rs.{{this.Price}}</p>
                                <button  onclick="addToCart('{{this._id}}')" class="btn btn-primary">Add to Cart</button>
                            </div>
                        </div>
                    </div>
                    {{/each}}
                </div>
            </div>
        </div>
    </section>
    <section>
        <div class="row" style="background-color: #131A22;height:200px;margin-top:30px">
            <div class="footer">

            </div>
        </div>
    </section>
    <style>
        .card{
            cursor: pointer;
        }
        .card:hover{
         transform: scale(1.05);
         box-shadow: 0 10px 20px rgba(0,0,0,.12), 0 4px 8px rgba(0,0,0,.06);
        
         }
         .ad-image{
            width: 100%;
             z-index: 1;
             margin-bottom: -190px;
             mask-image: linear-gradient(to bottom,rgba(0,0,0,1),rgba(0,0,0,0));
             
             
         }
         .card-img-top{
                 height: 165px;
                 width: 136px;
                 padding: 11px;
                margin-left: 5px;
         
         }
        

    </style>
    
    
